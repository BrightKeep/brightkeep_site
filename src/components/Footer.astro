<footer class="bg-brand-primary text-white py-12 lg:py-16" role="contentinfo">
  <div class="max-w-content mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {/* Column 1: Company identity */}
      <div>
        <p class="font-semibold text-h4">BrightKeep</p>
        <p class="text-small text-white/70 mt-1">
          Digital Business &amp; Product Development
        </p>
      </div>

      {/* Column 2: Contact details */}
