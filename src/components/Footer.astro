      <div class="flex gap-6">
        <a
          href="/privacy"
          class="hover:text-white transition-colors duration-200 min-h-[44px] inline-flex items-center focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white rounded"
