<section
  id="hero"
  class="relative bg-brand-primary text-white py-section lg:py-section-lg overflow-hidden"
  aria-labelledby="hero-heading"
  data-animate="hero"
>
  {/* CSS-only geometric background pattern */}
  <div
    class="absolute inset-0 opacity-100"
    style="background: radial-gradient(circle at 20% 80%, rgba(255, 107, 107, 0.08) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(58, 107, 159, 0.1) 0%, transparent 50%), radial-gradient(circle at 50% 50%, rgba(13, 148, 136, 0.05) 0%, transparent 70%);"
    aria-hidden="true"
  ></div>

  <div class="relative max-w-content mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1
      id="hero-heading"
      class="text-h1 lg:text-h1-lg mb-6"
      data-animate="hero-heading"
    >
      Digital Solutions. Decades of Delivery.
    </h1>

    <p
      class="text-body lg:text-body-lg text-white/80 max-w-2xl mx-auto mb-10"
      data-animate="hero-subheadline"
    >
      BrightKeep is a digital business and product development consultancy. We
      help organisations build better products, improve delivery practices, and
      grow internal engineering capability.
    </p>

    <a
      href="#contact"
      class="inline-block bg-brand-accent text-white font-semibold px-8 py-4 rounded-lg text-body hover:bg-[#FF5252] transition-colors duration-200 min-w-[180px] min-h-[44px] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
      data-animate="hero-cta"
    >
      Talk to Us
    </a>
  </div>
</section>
