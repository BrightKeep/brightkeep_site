<section
  id="services"
  class="bg-white py-section lg:py-section-lg"
  aria-labelledby="services-heading"
  data-animate="services-detail"
>
  <div class="max-w-content mx-auto px-4 sm:px-6 lg:px-8">
    <h2
      id="services-heading"
      class="text-h2 lg:text-h2-lg text-brand-primary text-center mb-12"
    >
      Services
    </h2>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      {/* Development Services */}
      <div>
        <h3 class="text-h3 lg:text-h3-lg text-brand-primary mb-6">
          Development Services
        </h3>
        <div class="divide-y divide-gray-200">
          {
            developmentServices.map((service) => (
              <details class="group" data-animate="accordion-item">
                <summary class="flex items-center justify-between py-4 cursor-pointer font-medium text-brand-dark hover:text-brand-accent transition-colors duration-200 min-h-[44px] list-none [&::-webkit-details-marker]:hidden">
                  <span>{service.title}</span>
                  <span class="ml-4 flex-shrink-0 text-brand-muted group-open:rotate-45 transition-transform duration-200">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                    </svg>
                  </span>
                </summary>
                <div class="accordion-content overflow-hidden">
                  <p class="pb-4 text-body text-brand-muted">{service.description}</p>
                </div>
              </details>
            ))
          }
        </div>
      </div>

      {/* Consulting Services */}
      <div>
        <h3 class="text-h3 lg:text-h3-lg text-brand-primary mb-6">
          Consulting Services
        </h3>
        <div class="divide-y divide-gray-200">
          {
            consultingServices.map((service) => (
              <details class="group" data-animate="accordion-item">
                <summary class="flex items-center justify-between py-4 cursor-pointer font-medium text-brand-dark hover:text-brand-accent transition-colors duration-200 min-h-[44px] list-none [&::-webkit-details-marker]:hidden">
