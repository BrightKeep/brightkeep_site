---
import Analytics from '../components/Analytics.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'BrightKeep | Digital Business & Product Development | Melbourne',
  description = 'BrightKeep is a Melbourne-based digital consultancy specialising in product development, delivery consulting, and engineering capability building for ambitious organisations.',
} = Astro.props;

const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://brightkeep.com.au';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).href;

const structuredData = {
  "@context": "https://schema.org",
  "@type": ["Organization", "LocalBusiness"],
  "name": "BrightKeep",
  "url": siteUrl,
  "email": "contact@brightkeep.com.au",
  "description": "Digital Business & Product Development consultancy helping organisations build better products, improve delivery practices, and grow engineering capability.",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Melbourne",
    "addressRegion": "VIC",
    "addressCountry": "AU"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Australia"
  }
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

    <!-- Google Fonts: Preconnect -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Google Fonts: Inter (400,500,600,700) + JetBrains Mono (400) -->
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400&family=Titillium+Web:wght@700&display=swap"
      rel="stylesheet"
    />

    <link rel="icon" type="image/png" href="/favicon.png" />
    <Analytics />
  </head>
  <body class="min-h-screen font-sans text-brand-dark bg-brand-surface antialiased">
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:z-[100] focus:bg-brand-accent focus:text-white focus:px-4 focus:py-2 focus:rounded-lg focus:text-body focus:font-semibold"
    >
      Skip to content
    </a>
    <slot />
  </body>
</html>
